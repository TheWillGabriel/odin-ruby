        Cuteness: <%= kitten.cuteness %>,
        Softness: <%= kitten.softness %><br>
        <%= link_to 'edit', edit_kitten_path(kitten) %> |
        <%= link_to 'destroy', kitten_path(kitten), method: :delete,
                               data: { confirm: 'Really? ğŸ˜¢'} %>
      </li>
    <% end %>
  <% else %>
