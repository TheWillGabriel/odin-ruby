<% provide(:title, "New Event") %>
<h1>New Event</h1>
<div class = "row">
  <div class = "col">
    <%= form_with model: @event, local: true do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>

      <%= f.label :date %>
      <%= f.datetime_local_field :date, class: "form-control" %>

      <%= f.submit "Create", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>