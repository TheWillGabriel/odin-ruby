<%= form_with model: @kitten, local: true do |f| %>
  <%= f.text_field :name, placeholder: 'Name' %>
  <%= f.number_field :age, placeholder: 'Age',
                           class: 'number-input' %>
  <%= f.number_field :cuteness, in: 1..11, 
                                placeholder: 'Cuteness (1-11)',
                                class: 'number-input' %>
  <%= f.number_field :softness, in: 1..11,
                                placeholder: 'Softness (1-11)',
                                class: 'number-input' %>
  <%= f.submit "Submit" %>
<% end %>