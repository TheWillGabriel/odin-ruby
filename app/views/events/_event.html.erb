<div class="card">
  <div class="card-header">
    <h5 class="mb-0">
      <button class="btn btn-link" data-toggle="collapse" data-target="collapse-<%= event.id %>">
        <%= event.title %>
      </button>
    </h5>
  </div>
  <div id="collapse-<%= event.id %>" class="collapse show" data-parent="#accordion">
    <div class="card-body">
      Host: <%= link_to event.host.name, event.host %></br>
      When: <%= event.date %></br>
      Details: <%= link_to "Show", event %>
    </div>
  </div>
</div>